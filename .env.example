# ARC-M ARISE Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Mistral/Magistral API
# =============================================================================
# Get your API key from: https://console.mistral.ai/
MISTRAL_API_KEY=your-api-key-here

# =============================================================================
# Isaac Lab (Linux Only)
# =============================================================================
# Path to Isaac Lab installation
ISAAC_LAB_PATH=$HOME/IsaacLab

# =============================================================================
# Training Configuration
# =============================================================================
# CUDA device to use
CUDA_VISIBLE_DEVICES=0

# Weights & Biases (optional)
WANDB_API_KEY=
WANDB_PROJECT=arise

# =============================================================================
# ROS 2 (Docker or Linux)
# =============================================================================
# ROS domain ID for multi-robot setups
ROS_DOMAIN_ID=0

# Enable discovery via multicast
ROS_LOCALHOST_ONLY=0
